<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/css/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="style.css"></link>
</head>


<body>

<nav class="navbar navbar-expand-lg d-flex flex-row">
    <ul class="navbar-nav">
        <li class="navVac mr-auto">
            <a class="navbar-brand" href="#">Vacation Builder</a>
        </li>
        <li class="nav-item active">
            <a class="navClass nav-link" href="#">Home</a>
        </li>
        <li class="nav-item">
            <a class="navClass nav-link" href="#">Login</a>
        </li>
          <li class="nav-item">
              <a class="navClass nav-link" href="#">My Profile</a>
              <span class="sr-only">(current)</span>
          </li>
          <li class="nav-item">
            <a class="navClass nav-link" href="/logout">{{Logout}}</a>
        </li>
    </ul>
</nav>


 <div class="d-flex flex-row justify-content-center mt-4">
    <h3 class="list">Vacation Builder</h3>
</div>



    <!-- displaying user info -->
<p class="ml-5">Welcome,</p>
<h4 class="ml-5">{{usernameReg}}</h4>
<h4 class="ml-5">{{username}}</h4>
<h4 class="ml-5">{{loggedOut}}</h4>


<!--Start of Trip List-->

<div class="d-flex justify-content-center mt-5">
<h3 class="listTrip">Trip List</h3>
</div>

    <!-- running a loop on  -->

<div class="d-flex flex-column align-items-center">
    <ul>
  {{#tripsList}}
        <li class="w-300">
        {{title}}
        </li>
        <li>
        <img src='{{image}}' style="width:300px; height:300px">
       </li>
        <li class="w-300">
        {{departure}}
        </li>
        <li class="w-300">
       {{arrival}}
        </li>
        <!-- creating forms so we can submit tripId for deletion -->
        <form action='/deleteTrip' method='post'>
        <input type="hidden" name="tripId" value='{{tripId}}' />
        <input type="submit" value="Delete" />
        </form>
      {{/tripsList}}
    </ul>
</div>



</body>
<script src="trips.js"></script>
</html>