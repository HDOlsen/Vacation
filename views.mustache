<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/css/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="style.css"></link>
</head>

<body>


    <form class="md-form d-flex flex-row justify-content-between mt-4" action="/trips" method="post">
      <input type="text" placeholder= "Enter your destination"name="title"/>
      <div class="file-field" style="width:400">
        <div class= "z-depth-1-half mb-2">
            <img  src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg" class="img-fluid" style="height:100px; width:100px">
        </div>
        <div class="d-flex flex-column justify-content-center">
            <div class="btn btn-mdb-color btn-rounded float-left">
                <span>Upload your vacation photo</span>
                <input name="image" placeholder="Vacation photo" type="file">
            </div>
        </div>
    </div>
      <input type="text" placeholder="June 10,2016" name="departure"/>
      <input type="text" placeholder ="June 21,2016" name="arrival"/>
      <input type="submit"/>
  </form>

<div class="d-flex justify-content-center mt-5">
<h3 class="list">Trip List</h3>
</div>

<!-- running a loop on  -->

<div class="d-flex flex-column align-items-center">
    <ul>
  {{#tripsList}}
        <li class="w-300">
        {{title}}
        </li>
        <li class="w-600">
        {{image}}
       </li>
        <li class="w-300">
        {{departure}}
        </li>
        <li class="w-300">
       {{arrival}}
        </li>
      {{/tripsList}}
    </ul>
</div>



</body>

<script src="trips.js"></script>

</html>